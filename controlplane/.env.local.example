# WorkOS AuthKit Configuration
WORKOS_CLIENT_ID=client_your_client_id_here
WORKOS_API_KEY=sk_test_your_api_key_here
WORKOS_COOKIE_PASSWORD=your_secure_password_here_must_be_at_least_32_characters_long
NEXT_PUBLIC_WORKOS_REDIRECT_URI=http://localhost:3000/callback
# Optional: override role slugs used for membership invite/updates.
# Defaults include admin/owner for admin and user/member for user.
# WORKOS_ADMIN_ROLE_SLUG=owner
# WORKOS_USER_ROLE_SLUG=member
# Required for Convex AuthKit prod auto-provisioning (`npx convex deploy`).
VERCEL_PROJECT_PRODUCTION_URL=your-project.vercel.app

# Convex
NEXT_PUBLIC_CONVEX_URL=https://your-convex-deployment.convex.cloud

# Postgres audit log (append-only)
DATABASE_URL=postgres://postgres:postgres@localhost:5432/controlplane

# AI chat streaming
OPENAI_API_KEY=sk-your-openai-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key
GOOGLE_GENERATIVE_AI_API_KEY=your-google-generative-ai-key
OPENROUTER_API_KEY=sk-or-your-openrouter-key
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_HTTP_REFERER=http://localhost:3000
OPENROUTER_APP_NAME=ControlPlane
AI_CHAT_MODEL=openrouter:openai/gpt-4.1-mini
AI_CHAT_RATE_LIMIT_WINDOW_MINUTES=60
AI_CHAT_MAX_USER_MESSAGES_PER_WINDOW=40
AI_ARTIFACTS_V1_ENABLED=true
